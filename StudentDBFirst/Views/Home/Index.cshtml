@model IEnumerable<StudentDBFirst.Models.DB.Student>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                @Html.Label("Search:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.TextBox("SearchTerm", null, new { @class = "form-control", @style = "max-width: 100%;" })
                </div>
                <div class="col-md-2">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <p>
            @Html.ActionLink("Create New", "New")
        </p>

        <table class="table table-striped table-condensed text-center">
            <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Mobile)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Telephone)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="vertical-align:middle">
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td style="vertical-align:middle">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td style="vertical-align:middle">
                        @Html.DisplayFor(modelItem => item.Mobile)
                    </td>
                    <td style="vertical-align:middle">
                        @Html.DisplayFor(modelItem => item.Telephone)
                    </td>
                    <td>
                        <a href='@Url.Action("Edit", "Home", new { @id = item.StudentId })'><i class="fas fa-pen-square fa-2x"></i></a>
                        <a href='@Url.Action("Delete", "Home", new { @id = item.StudentId })'><i class="fas fa-window-close fa-2x text-danger"></i></a>
                    </td>
                </tr>
            }

        </table>

    </div>
</div>




